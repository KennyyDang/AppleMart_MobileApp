{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./app/components/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@utils/*": ["./app/utils/*"],
      "@screens/*": ["./app/screens/*"],
      "@navigation/*": ["./app/navigation/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": [
    "app",
    "app/**/*.ts",
    "app/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
